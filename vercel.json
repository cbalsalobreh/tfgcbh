{
    "version": 2,
    "builds": [
        { "src": "package.json", "use": "@vercel/node" },
        { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "app.py" },
        { "src": "/(.*)", "dest": "client/public/index.html" }
    ],
    "functions": {
        "install": {
        "runtime": "@vercel/python",
        "includeFiles": "requirements.txt"
        }
    }
}

